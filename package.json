{
  "name": "html5boilerplate.com",
  "version": "8.0.0",
  "private": true,
  "description": "static website for https://html5boilerplate.com",
  "homepage": "https://html5boilerplate.com/",
  "bugs": {
    "url": "https://github.com/h5bp/html5boilerplate.com/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/h5bp/html5boilerplate.com.git"
  },
  "license": "MIT",
  "author": "@h5bp",
  "scripts": {
    "build": "parcel build src/index.html --out-dir docs --no-source-maps --no-content-hash && npm run version-update",
    "dev": "parcel src/index.html --open",
    "start": "npm run build && npm run dev",
    "version-update": "replace '{{h5bp-version}}' '8.0.0' docs/index.html",
    "css-lint": "stylelint \"src/css/*_*.css\"",
    "svgo": "npm-run-all --parallel \"svgo:base -- --folder=src\"",
    "svgo:base": "svgo --config=_svgo.yml --recursive"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "IE 11"
  ],
  "devDependencies": {
    "main.css": "^2.1.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-purgecss": "3.0.0",
    "prettier": "^2.0.5",
    "replace": "^1.2.0",
    "sass": "^1.26.9",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "svgo": "^1.3.2"
  },
  "engines": {
    "node": ">=12"
  },
  "h5bp-configs": {
    "directories": {
      "dist": "docs",
      "src": "src"
    }
  }
}
